
<%= form_for flight_data do |f| %>
  <div class="field">
    <%= f.label :from, class: 'label' %>
    <p class="control">
      <%= f.text_field :from, class: 'input' %>
    </p>
  </div>

  <div class="field">
    <%= f.label :to, class: 'label' %>
    <p class="control">
      <%= f.text_field :to, class: 'input' %>
    </p>
  </div>

  <div class="field">
    <%= f.label :airline, class: 'label' %>
    <p class="control">
      <%= f.text_field :airline, class: 'input' %>
    </p>
  </div>

  <div class="field">
    <%= f.label :num_passenger, class: 'label' %>
    <p class="control">
      <%= f.text_field :num_passenger, class: 'input' %>
    </p>
  </div>

  <div class="field">
    <p class="control">
      <%= f.submit 'Submit', class: 'button is-primary' %>
    </p>
  </div>
<% end %>
